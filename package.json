{
  "name": "fav",
  "displayName": "Fav",
  "description": "Bookmark your favorite files and folders",
  "version": "1.0.0",
  "author": {
    "email": "frederic.jecker@gmail.com",
    "name": "Frederic Jecker"
  },
  "publisher": "FredJeck",
  "icon": "resources/bookmark.png",
  "repository": {
    "url": "https://github.com/fredjeck/fav"
  },
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fav.palette.favoriteActiveFile",
    "onCommand:fav.palette.favoriteActiveFileToGroup",
    "onCommand:fav.menu.favoriteActiveFile",
    "onCommand:fav.menu.favoriteActiveFileToGroup",
    "onCommand:fav.palette.openFavorite",
    "onCommand:fav.palette.createGroup",
    "onView:favorites"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fav.palette.favoriteActiveFile",
        "title": "Favorites: Add active file to favorites"
      },
      {
        "command": "fav.palette.favoriteActiveFileToGroup",
        "title": "Favorites: Add active file to favorites group"
      },
      {
        "command": "fav.palette.openFavorite",
        "title": "Favorites: Open favorite"
      },
      {
        "command": "fav.palette.createGroup",
        "title": "Favorites: Create new group"
      },
      {
        "command": "fav.palette.openGroup",
        "title": "Favorites: Open favorites group"
      },
      {
        "command": "fav.view.createGroup",
        "title": "Add new group",
        "icon": {
          "light": "resources/light/new-folder.svg",
          "dark": "resources/dark/new-folder.svg"
        }
      },
      {
        "command": "fav.context.renameFavorite",
        "title": "Rename",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "fav.context.removeFavorite",
        "title": "Remove",
        "icon": {
          "light": "resources/light/trash.svg",
          "dark": "resources/dark/trash.svg"
        }
      },
      {
        "command": "fav.menu.favoriteActiveFile",
        "title": "Add to favorites"
      },
      {
        "command": "fav.menu.favoriteActiveFileToGroup",
        "title": "Add to favorites group"
      },
      {
        "command": "fav.context.openGroup",
        "title": "Open favorites group",
        "icon": {
          "light": "resources/light/folder-opened.svg",
          "dark": "resources/dark/folder-opened.svg"
        }
      },
      {
        "command": "fav.context.openResource",
        "title": "Open resource"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "favorites-explorer",
          "title": "Favorites",
          "icon": "resources/bookmark.svg"
        }
      ]
    },
    "views": {
      "favorites-explorer": [
        {
          "id": "favorites",
          "name": "Favorites",
          "icon": "resources/bookmark.svg",
          "contextualTitle": "Favorites Explorer"
        }
      ]
    },
    "menus": {
      "commandPalette": [
        {
          "command": "fav.palette.favoriteActiveFile",
          "when": "editorIsOpen"
        },
        {
          "command": "fav.palette.favoriteActiveFileToGroup",
          "when": "editorIsOpen"
        },
        {
          "command": "fav.palette.openFavorite"
        },
        {
          "command": "fav.palette.createGroup"
        },
        {
          "command": "fav.palette.openGroup"
        },
        {
          "command": "fav.context.openResource",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "fav.menu.favoriteActiveFile",
          "group": "commands",
          "when": "resource && !explorerResourceIsFolder"
        },
        {
          "command": "fav.menu.favoriteActiveFileToGroup",
          "group": "commands",
          "when": "resource && !explorerResourceIsFolder"
        }
      ],
      "view/item/context": [
        {
          "command": "fav.context.renameFavorite"
        },
        {
          "command": "fav.context.removeFavorite"
        },
        {
          "command": "fav.context.openGroup",
          "group": "inline",
          "when": "viewItem == group"
        }
      ],
      "view/title": [
        {
          "command": "fav.view.createGroup",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "uuid": "^8.3.1"
  }
}