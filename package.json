{
  "name": "fav",
  "displayName": "fav",
  "description": "Bookmark your favorite files and folders",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.51.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fav.favoriteActiveFile",
    "onCommand:fav.openFavorite",
    "onView:favorites"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fav.favoriteActiveFile",
        "title": "Favorites: Add active file to favorites"
      },
      {
        "command": "fav.openFavorite",
        "title": "Favorites: Open favorite"
      },
      {
        "command": "fav.renameFavorite",
        "title": "Edit",
        "icon": {
          "light": "resources/light/edit.svg",
          "dark": "resources/dark/edit.svg"
        }
      },
      {
        "command": "fav.deleteFavorite",
        "title": "Remove",
        "icon": {
          "light": "resources/light/trash.svg",
          "dark": "resources/dark/trash.svg"
        }
      },
      {
        "command": "fav.openResource",
        "title": "Open favorite"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "favorites-explorer",
          "title": "Favorites",
          "icon": "resources/bookmark.svg"
        }
      ]
    },
    "views": {
      "favorites-explorer": [
        {
          "id": "favorites",
          "name": "Favorites",
          "icon": "resources/bookmark.svg",
          "contextualTitle": "Favorites Explorer"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "fav.renameFavorite",
          "when": "view == favorites",
          "group": "inline"
        },
        {
          "command": "fav.deleteFavorite",
          "when": "view == favorites",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.51.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/uuid": "^8.3.0",
    "uuid": "^8.3.1"
  }
}